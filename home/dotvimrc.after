""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

if ! has('gui_running')
  set background=dark
  if 'light' == &background
    source ~/.vimrc.local/vimrc.terminal-colors-light
  else
    source ~/.vimrc.local/vimrc.terminal-colors-dark
  end
end

